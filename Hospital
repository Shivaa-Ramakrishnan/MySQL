CREATE DATABASE Sholl;
USE Sholl;
CREATE TABLE DEPARTMENT(D_Name int primary key,D_LOCATION VARCHAR(45),FACILITIES VARCHAR(10000));
CREATE TABLE ALL_DOCTORS(DOC_NO INT PRIMARY KEY,DEPARTMENT VARCHAR(45));
CREATE TABLE DOC_REG(foreign key (DOC_NO )REFERENCES ALL_DOCTORS(DOC_NO),QUALIFICATION VARCHAR (45),SALARY FLOAT,EN_TIME TIME,EX_TIME TIME,ADDRESS VARCHAR (100),PH_NO INT,DOJ VARCHAR (45));
CREATE TABLE DOC_ON_CALL(foreign key (DOC_NO )REFERENCES ALL_DOCTORS(DOC_NO),FS_PR_CL VARCHAR(100),PYMT_DU VARCHAR(100));
CREATE TABLE PAT_ENTRY(PAT_NO INT,PAT_NAME VARCHAR(45),CHECKUP_DT VARCHAR(45),PT_AGE INT,SEX VARCHAR(6),RFRG_CSTNT VARCHAR(45),DIAGNOSIS VARCHAR(45) ,RFD VARCHAR(45),CITY VARCHAR(45),ADDRESS VARCHAR(45),PH_NO INT,DEPARTMENT VARCHAR(45));
ALTER TABLE PAT_ENTRY ADD PRIMARY KEY(PAT_NO,DIAGNOSIS);
 
CREATE TABLE PAT_CHKUP(foreign key (PAT_NO) references PAT_ENTRY(PAT_NO),foreign key (DOC_NO )REFERENCES ALL_DOCTORS(DOC_NO),FOREIGN KEY (DIAGNOSIS) REFERENCES PAT_ENTRY(DIAGNOSIS),PAT_STATUS VARCHAR(45),TREATMENT VARCHAR(50)PRIMARY KEY);
CREATE TABLE PAT_ADMIT(foreign key (PAT_NO) references PAT_ENTRY( PAT_ENTRY),ADV_PYMT FLOAT,MODE_PYMT VARCHAR(45),ROOM_NO INT,DEPT_NAME VARCHAR(45),ADMTD_ON VARCHAR(45),COND_ON VARCHAR(45),INVESTGN_ON VARCHAR(45),TRMT_SDN VARCHAR(45),ATTDNT_NM VARCHAR(45));
CREATE TABLE PAT_DIS(foreign key (PAT_NO) references PAT_ENTRY(PAT_NO),
					TR_VDS VARCHAR(45),MEDICINES VARCHAR(2000) PRIMARY KEY,PYMT_GV VARCHAR(45),DIS_ON DATE);

CREATE TABLE PAT_REG(foreign key (PAT_NO) references PAT_ENTRY(PAT_NO),
DATE_VIS DATE,PAT_CONDITION VARCHAR(1000),foreign key (TREATMENT) REFERENCES PAT_CHKUP(TREATMENT),
foreign key(MEDICINES)references PAT_DIS(MEDICINES),
FOREIGN KEY(DOC_NO) REFERENCES ALL_DOCTORS(DOC_NO),
PAYMT VARCHAR(45));

CREATE TABLE PAT_OPR(foreign key (PAT_NO) references PAT_ENTRY(PAT_NO),
DATE_OPR DATE,IN_COND VARCHAR(45),AFOP_COND VARCHAR(45),TY_OPR VARCHAR(50),
foreign key(MEDICINES) REFERENCES PAT_DIS(MEDICINES),
foreign key(DOC_NO) REFERENCES ALL_DOCTORS(DOC_NO),OPTH_NO INT,OTHER_SUG VARCHAR(50));

CREATE TABLE ROOM_DETAILS(ROOM_NO INT PRIMARY KEY,ROOM_TYPE VARCHAR(50),ROOM_STATUS VARCHAR(50),RM_DL_CRG VARCHAR(45),
OTHER_CRG VARCHAR(50));
